            <Style x:Key="FontComicSansPage" TargetType="Window">
                <Setter Property="FontFamily" Value="Comic Sans MS"/>
                <Setter Property="FontSize" Value="15"/>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>
